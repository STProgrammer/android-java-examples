<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/linLayMain"
    android:background="@color/myColor1"
    tools:context="dt.uit.no.MyTestActivity" >

     <EditText
         android:id="@+id/etInput"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@color/myTextBackgroundColor2"
         android:ems="10" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Bakgrunnsfarge editext."
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cbTextBackgroundColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tekstbakgrunnsfarge "
            android:checked="false"
            android:onClick="doSwitchTextBackgroundColor"
            />
        <CheckBox
            android:id="@+id/cbTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tekstfarge "
            android:checked="false"
            android:onClick="doSwitchTextColor"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Bakgrunnsfarge, skjerm"
        />

    <CheckBox
        android:id="@+id/cbBackgroundColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endre bakgrunnsfarge skjerm "
        android:onClick="doSwitchBackgroundColor"
        android:checked="false"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Lagre innstillinger"
        />
    <CheckBox
        android:id="@+id/cbSaveOnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lagre ved avslutning"
        android:checked="false"
         />

</LinearLayout>
